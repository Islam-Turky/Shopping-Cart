<div class="container d-flex justify-content-center align-items-center flex-column align-content-center" style="height: 70dvh">
    <div class="container d-flex justify-content-center align-items-center flex-column align-content-center">
        <div class="text-center text-info font-monospace" style="font-size: 20px; font-weight:bolder">Sign up</div>
        <form asp-action="Register" class="d-flex flex-column justify-content-between align-items-center w-100 h-100 gap-3 p-5">
            <div class="d-flex justify-content-between w-25">
                <div style="flex: 2">
                    <label for="UName" class="text-dark">Name</label>
                </div>
                <input type="text" name="userName" id="UName" style="border-radius: 8px" />
            </div>
            <div class="d-flex justify-content-between w-25">
                <div style="flex: 1">
                    <label for="Email" class="text-dark">Email</label>
                </div>
                <div style="flex: 1">
                    <input type="email" name="email" id="Email" style="border-radius: 8px" />
                </div>
            </div>
            <div class="d-flex justify-content-between w-25">
                <div style="flex: 1">
                    <label for="password" class="text-dark">Password</label>
                </div>
                <div style="flex: 1">
                    <input type="password" name="password" id="Password" style="border-radius: 8px" />
                </div>
            </div>
            <div class="text-start w-25 d-flex justify-content-between align-items-center">
                <button class="btn btn-dark">login</button>
                <a asp-controller="User" asp-action="Login" class="text-center text-decoration-none font-monospace">Login</a>
            </div>
        </form>
    </div>
</div>